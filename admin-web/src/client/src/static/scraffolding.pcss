@import url('https://fonts.googleapis.com/css?family=Ubuntu');
@reset-global pc;

html {
	height: 100%;
	box-sizing: border-box;
}

*,
::before,
::after {
  box-sizing: inherit;
}

body {
  height: 100%;
}

body, input, button {
	font-family: 'Ubuntu', sans-serif;
}

.container {
	display: flex;
	flex-direction: column;
	background-color: #ecf0f2;
}

a {
	color: inherit;
	text-decoration: none;
}
